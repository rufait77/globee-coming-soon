generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Waitlist {
  id           String   @id @default(uuid())
  email        String   @unique
  source       String   @default("landing_page")
  referralCode String?  @map("referral_code")
  createdAt    DateTime @default(now()) @map("created_at")

  @@map("waitlist")
}
